<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="col">
            <div class="card h-100">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                <img class="card-img-top" src="@photoPath"
                 asp-append-version="true" />
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">
                        View
                    </a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                       class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>

                </div>
            </div>
        </div>
    }
</div>